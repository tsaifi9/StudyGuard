<div class="row">
  <div class="medium-4 medium-centered large-4 large-centered columns panel text-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
      <h2>Register</h2>
      <%= f.email_field :email, autofocus: true, placeholder: "email" %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirmation" %>
      
      <%= f.submit "Sign Up", class: "full button" %>
    <% end %>
  </div>
</div>